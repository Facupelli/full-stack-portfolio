---
import AbsoluteBg from "./bg/absolute-bg.astro";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const defaultClass =
  "rounded-[36px] lg:rounded-[16px] p-12 lg:p-8 border border-border-white";
---

<div class:list={[defaultClass, className]}>
  <AbsoluteBg class="rounded-[36px] lg:rounded-[16px]" />
  <slot />
</div>
