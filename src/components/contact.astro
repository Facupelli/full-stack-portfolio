---
import Section from "../components/section/section.astro";
import { Icon } from "astro-icon/components";
import Link from "./link.astro";
import CopyToClipboardButton from "./buttons/copy-to-clipboard-button.astro";
import BluredCircle from "./blured-circle.astro";
---

<Section class="contact-section">
  <div class="flex flex-col items-center justify-center">
    <div>
      <div class="grid reveal-text-container">
        <p
          class="text-[2.2rem] lg:text-[1.6rem] text-balance leading-2 text-center font-title reveal-text-fast"
        >
          Now that you know a bit about me,
        </p>
        <p
          class="text-[2.2rem] lg:text-[1.6rem] text-balance leading-2 text-center font-title reveal-text-fast"
        >
          what about you? Let's stay in touch!
        </p>
      </div>

      <div class="flex items-center justify-center gap-8 lg:gap-4 pt-10">
        <CopyToClipboardButton class="animate-float">
          <Icon name="email" class="size-12 lg:size-8 text-white" />
        </CopyToClipboardButton>
        <Link
          href="https://www.linkedin.com/in/facundopellicer/"
          class="animate-float"
        >
          <Icon name="linkedin" class="size-12 lg:size-8 text-white" />
        </Link>
      </div>
    </div>

    <BluredCircle class="contact-circle opacity-0" />

    <div
      class="text-[1.5rem] lg:text-[1rem] pt-[20rem] flex items-center gap-2"
    >
      Created with love <Icon
        name="heart"
        class="size-10 lg:size-6 text-red-800"
      />
    </div>
    <p class="text-opacity-white lg:text-[.6rem]">MADE IN ASTRO</p>
  </div>
</Section>
