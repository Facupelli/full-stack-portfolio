---
import Badge from "./badge.astro";
import Section from "./section/section.astro";
import SectionTitle from "./section/section-title.astro";
import Link from "./link.astro";
import { Icon } from "astro-icon/components";
import Card from "./card.astro";
import BluredCircle from "./blured-circle.astro";

const experiences = [
  {
    time: "2023 - Present",
    title: "Full Stack Developer",
    company: "Fidooo Engineering",
  },
  {
    time: "2023 (6 months)",
    title: "WordPress Developer",
    company: "Eventys",
  },
  {
    time: "2022 - 2023",
    title: "Full Stack Developer",
    company: "Freelance",
  },
];

const currentTechs = [
  { name: "Next.js", color: "" },
  { name: "Nest.js", color: "border-red-400" },
  { name: "Typescript", color: "border-blue-400" },
  { name: "Google Cloud", color: "border-green-400" },
  { name: "Firebase", color: "border-yellow-400" },
  { name: "SQL", color: "border-indigo-400" },
  { name: "Git", color: "border-red-400" },
  { name: "Github", color: "" },
  { name: "Docker", color: "border-blue-400" },
  { name: "Astro", color: "border-purple-400" },
];

const triedTechs = [
  { name: "Remix", color: "" },
  { name: "Vue", color: "border-green-400" },
  { name: "Go", color: "border-sky-400" },
  { name: "Adonis", color: "border-purple-400" },
  { name: "Nuxt", color: "border-green-400" },
  { name: "HTMX", color: "border-blue-400" },
  { name: "Python", color: "border-yellow-400" },
  { name: "Django", color: "border-green-400" },
  { name: "Flask", color: "border-red-400" },
  { name: "Elixir", color: "border-purple-400" },
  { name: "Phoenix", color: "border-rose-400" },
];
---

<Section class="pt-32 relative">
  <div class="mb-20">
    <SectionTitle>EXPERIENCE</SectionTitle>
    <div class="w-20 h-0.5 bg-gradient-to-r from-white/20 to-transparent mt-4">
    </div>
  </div>

  <div class="grid lg:grid-cols-[1fr_400px] gap-16 lg:gap-20">
    <!-- Experience Timeline -->
    <div class="space-y-8">
      {
        experiences.map((experience, index) => (
          <div class="group relative">
            <div class="absolute left-[1px] top-5 w-px h-full bg-gradient-to-b from-white/10 to-transparent" />

            <div class="absolute left-0 top-3 w-2 h-2 -translate-x-0.5 rounded-full bg-white/20 group-hover:bg-white/40 transition-colors duration-300" />

            <div class="pl-8 pb-8">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
                <h3 class="text-xl lg:text-2xl font-medium text-white group-hover:text-white/90 transition-colors duration-300">
                  {experience.title}
                </h3>
                <span class="text-sm text-white/50 font-mono mt-1 sm:mt-0">
                  {experience.time}
                </span>
              </div>
              <p class="text-white/60 text-lg">{experience.company}</p>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Tech Stack -->
    <div class="space-y-12">
      <!-- Current Technologies -->
      <Card class="relative overflow-hidden">
        <div class="relative z-10">
          <h3 class="text-lg font-medium text-white/90 mb-6">
            Currently Working With
          </h3>
          <div class="flex flex-wrap gap-2">
            {
              currentTechs.map((tech) => (
                <Badge
                  class={`text-sm transition-all duration-300 hover:scale-105 hover:border-white/20 ${tech.color || "border-white/10"}`}
                  color={tech.color}
                >
                  {tech.name}
                </Badge>
              ))
            }
          </div>
        </div>
      </Card>
    </div>
  </div>
</Section>
