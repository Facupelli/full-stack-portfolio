---
import "../styles/global.css";
import "@fontsource/open-sans";
import "@fontsource/inter";
import BluredCircle from "../components/blured-circle.astro";
// import SeoHead from '../components/SeoHead.astro';
---

<html lang="es">
  <!-- <SeoHead /> -->

  <body class="bg-[rgb(15,15,15)] text-white relative">
    <div class="absolute w-full h-full top-0 left-0 overflow-hidden">
      <div class="noise"></div>
    </div>

    <slot />

    <script>
      import { animateNoise } from "../gsap/noise";
      import { animateIntro } from "../gsap/intro";
      import { animateFreelance } from "../gsap/freelance";
      import { animateContact } from "../gsap/contact";
      import { animateHighlightBorder } from "../gsap/experience";

      animateNoise();
      animateIntro();
      animateFreelance();
      animateContact();
      animateHighlightBorder();
    </script>
  </body>
</html>

<style>
  .noise {
    position: absolute;
    background: url("https://framerusercontent.com/images/rR6HYXBrMmX4cRpXfXUOvpvpB0.png");
    opacity: 0.03;
    inset: -200%;
    width: 400%;
    height: 400%;
    filter: contrast(100);
  }
</style>
